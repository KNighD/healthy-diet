.container {

}

.categories-list{
  background-color: #fff;
  white-space: nowrap;
  padding: 8px;
}

.category {
  padding: 4px 8px;
  color: #455a64;
  font-size: 14px;
  background-color: #f5f5f5;
  display: inline-block;
  margin-right: 8px;
  border-radius: 4px;
}
.category.active {
  background: #e6fffb;
  color: #13c2c2;
}

.composition-list {
  padding: 4px 8px;
  margin-bottom: 2px;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.composition {
  color: #455a64;
  font-size: 13px;
  padding: 4px 8px;
}
.composition.active {
  color: #13c2c2;
  font-size: 15px;
}
.foods-list {
  padding: 0 8px;
}
.food { 
  display: flex;
  padding: 8px;
  justify-content: space-between;
  align-items: center;
}
.food-name {
  color: #455a64;
  font-size: 14px;
}

.food-info {
  display: flex;
  align-items: baseline;
}

.food-info .unit{
  font-size: 13px;
  color: #455a64;
}

.food-info .value {
  font-size: 18px;
  margin: 4px 8px;
}

.footer {
  width: 100%;
  padding: 20px;
  color: #969799;
  font-size: 14px;
  text-align: center;
}

.loading {
  width: 100%;
}